<Controls:MetroWindow x:Class="NiFlash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mv="clr-namespace:NiFlash.MainView"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" VerticalAlignment="Top">
            <mv:TitleColumUC/>
        </Grid>
        <Grid Grid.Row="1" VerticalAlignment="Bottom">
            <mv:ToolBarUC/>
        </Grid>

        <Grid Grid.Row="2">
            <Controls:DropDownButton 
                    VerticalContentAlignment="Center"
                    Width="120"
                    Content="Test"
                    DisplayMemberPath="Title"
                    ItemsSource="{Binding Albums}" HorizontalAlignment="Center" VerticalAlignment="Center">
            </Controls:DropDownButton>

            <Button Height="38" Width="100" VerticalAlignment="Center" HorizontalAlignment="Left">
                cgfdsf
            </Button>
        </Grid>
    </Grid>
</Controls:MetroWindow>
